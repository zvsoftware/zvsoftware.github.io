---
import Nav from '../components/Nav';

export interface Props {
	title: string;
	nav?: boolean,
	class?: string | null;
}

const { title, nav, class: className } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8'>
		<meta http-equiv='X-UA-Compatible' content='IE=edge'>
		<meta name='viewport' content='width=device-width, initial-scale=1.0'>
		<meta name="description" content="Custom software development services to enhance your organization's efficiency, productivity, and revenue. Based out of Gowanda, New York.">
		<title>{ title }</title>
		<link rel='stylesheet' href='/css/tailwind.css'/>
	</head>
	<body class={`${ className } overflow-x-clip relative`}>
		{ nav !== false ? <Nav/> : '' }
		<slot/>
	</body>
</html>