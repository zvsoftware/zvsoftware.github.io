---
import Layout from './Layout.astro';

export interface Props {
    title: string;
    class?: string;
}
const { title, class: className } = Astro.props;
---


<Layout title={ title }>
    <article class={`mx-auto py-16 max-w-screen-lg grid place-content-center markdown ${ className }`}>
        <slot/>
    </article>
</Layout>