---
import MarkdownContainer from '../components/MarkdownContainer.astro';
import SimpleHero from '../components/SimpleHero.astro';
import Layout from './Layout.astro';

export interface Props {
    class?: string | null;
}

const { class: className, frontmatter } = Astro.props;
---

<Layout title={ frontmatter.title } class={ className }>
    <SimpleHero 
        header={ frontmatter.title } 
        lead={ frontmatter.lead }
        bgImgSrc={ frontmatter.heroImage }
    />

    <MarkdownContainer>
        <slot/>
    </MarkdownContainer>
</Layout>

