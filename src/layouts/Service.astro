---
import MarkdownContainer from '../components/MarkdownContainer.astro';
import SimpleHero from '../components/SimpleHero.astro';
import Layout from './Layout.astro';

export interface Props {
    class?: string | null;
    title: string;
    lead: string;
    heroImageSrc: string;
}

const { class: className, title, lead, heroImageSrc} = Astro.props;
---

<Layout title={ title } class={ className }>
    <SimpleHero 
        header={ title } 
        lead={ lead }
        bgImgSrc={ heroImageSrc }
    />

    <slot/>
</Layout>

